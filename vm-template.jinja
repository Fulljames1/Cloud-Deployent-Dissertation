#https://cloud.google.com/deployment-manager/docs/configuration/templates/create-basic-template
#https://cloud.google.com/deployment-manager/docs/step-by-step-guide/create-a-template
#https://cloud.google.com/compute/docs/machine-types

#Deployment of vm1
resources:
- name: the-first-vm
  type: compute.v1.instance
  properties:
    zone: europe-west2-b
    machineType: https://www.googleapis.com/compute/v1/projects/cmp3747m-fulljames-16630227/zones/europe-west2-b/machineTypes/n1-standard-8 #Machine suited to business size and demand
    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        sourceImage: https://www.googleapis.com/compute/v1/projects/ubuntu-os-cloud/global/images/family/ubuntu-1810 #Loading ubuntu OS onto VM
    networkInterfaces:
    - network: $(ref.mobileapp-network.selfLink)
      subnetwork: $(ref.vm-subnet-public.selfLink)
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT
    serviceAccounts: #Assign service account to vm
    - email: $(ref.{{ properties['serviceAccountId'] }}.email)
      scopes:
      - "https://www.googleapis.com/auth/cloud-platform"
