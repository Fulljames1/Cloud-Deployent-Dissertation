resources:
  - name: debian-lb-hc #Create a health check for the backend
    type: compute.v1.httpHealthCheck
    properties:
      port: 80
      requestPath: /
      
  - name: debian-url-map #Required to map url to backend
    type: compute.v1.urlMap
    properties:
      defaultService: $(ref.backend.selfLink)
      
  - name: backend
    type: compute.v1.backendService #Deployment of backend for VM's 
    properties:
      port: 80
      portName: http
      protocol: HTTP #Defeined HTTP port for communication with backends
      backends:
      - name: backend
        balancingMode: UTILIZATION
        capacityScaler: 1.0
        group: $(ref.ins-group.selfLink)
      maxUtilization: 0.8
      connectionDraining:
        drainingTimeoutSec: 300
      healthChecks: 
      - $(ref.debian-lb-hc.selfLink)
  
  - name: debian-http-proxy
    type: compute.v1.targetHttpProxy
    properties:
      urlMap: $(ref.debian-url-map.selfLink)
      
  - name: debian-ipaddress
    type: compute.v1.globalAddress
    
  - name: debian-http-forwardingrule #Creation of forwarding rule 
    type: compute.v1.globalForwardingRule
    properties:
      target: $(ref.debian-http-proxy.selfLink)
      IPAddress: $(ref.debian-ipaddress.address)
      IPProtocol: TCP #Chosen protocol
      portRange: 80-80
      
