#https://cloud.google.com/deployment-manager/docs/step-by-step-guide/create-a-template

#deployment of second vm
resources:
- name: the-second-vm
  type: compute.v1.instance
  properties:
    zone: europe-west2-b
    machineType: https://www.googleapis.com/compute/v1/projects/cmp3747m-fulljames-16630227/zones/europe-west2-b/machineTypes/n1-standard-8 #machine type for our needs
    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        sourceImage: https://www.googleapis.com/compute/v1/projects/windows-cloud/global/images/family/windows-2016 #Deploying windows server 2016
    networkInterfaces:
    - network: $(ref.mobileapp-network.selfLink)
      subnetwork: $(ref.vm-subnet-public.selfLink) #Assign to subnet public
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT
    serviceAccounts: #Assign service account to vm
    - email: $(ref.{{ properties['serviceAccountId'] }}.email)
      scopes:
      - "https://www.googleapis.com/auth/cloud-platform"